{
  "name": "codefly-vscode-ide-companion",
  "displayName": "Codefly Companion",
  "description": "Enable Codefly with direct access to your IDE workspace.",
  "version": "0.24.0-nightly.20251227.37be16243",
  "publisher": "google",
  "icon": "assets/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/luobintianya/codefly-cli.git",
    "directory": "packages/vscode-ide-companion"
  },
  "engines": {
    "vscode": "^1.99.0"
  },
  "license": "LICENSE",
  "preview": true,
  "categories": [
    "AI"
  ],
  "keywords": [
    "codefly",
    "cli",
    "ide integration",
    "ide companion"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "configuration": {
      "title": "Codefly",
      "properties": {
        "codefly.debug.logging.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable detailed logging for debugging the Codefly Companion."
        }
      }
    },
    "languages": [
      {
        "id": "codefly-diff-editable"
      }
    ],
    "commands": [
      {
        "command": "codefly.diff.accept",
        "title": "Codefly: Accept Diff",
        "icon": "$(check)"
      },
      {
        "command": "codefly.diff.cancel",
        "title": "Codefly: Close Diff Editor",
        "icon": "$(close)"
      },
      {
        "command": "codefly.runCodefly",
        "title": "Codefly: Run"
      },
      {
        "command": "codefly.showNotices",
        "title": "Codefly: View Third-Party Notices"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "codefly.diff.accept",
          "when": "codefly.diff.isVisible"
        },
        {
          "command": "codefly.diff.cancel",
          "when": "codefly.diff.isVisible"
        }
      ],
      "editor/title": [
        {
          "command": "codefly.diff.accept",
          "when": "codefly.diff.isVisible",
          "group": "navigation"
        },
        {
          "command": "codefly.diff.cancel",
          "when": "codefly.diff.isVisible",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "codefly.diff.accept",
        "key": "ctrl+s",
        "when": "codefly.diff.isVisible"
      },
      {
        "command": "codefly.diff.accept",
        "key": "cmd+s",
        "when": "codefly.diff.isVisible"
      }
    ]
  },
  "main": "./dist/extension.cjs",
  "type": "module",
  "scripts": {
    "prepackage": "npm run generate:notices && npm run check-types && npm run lint && npm run build:prod",
    "build": "npm run build:dev",
    "build:dev": "npm run check-types && npm run lint && node esbuild.js",
    "build:prod": "node esbuild.js --production",
    "generate:notices": "node ./scripts/generate-notices.js",
    "prepare": "npm run generate:notices",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "watch": "npm-run-all2 -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "vsce package --no-dependencies",
    "test": "vitest run",
    "test:ci": "vitest run --coverage",
    "validate:notices": "node ./scripts/validate-notices.js"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "20.x",
    "@types/vscode": "^1.108.1",
    "@vscode/vsce": "^3.7.1",
    "esbuild": "^0.27.2",
    "npm-run-all2": "^8.0.2",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.23.0",
    "cors": "^2.8.6",
    "express": "^5.2.1",
    "zod": "^3.25.76"
  }
}
